{%- if content_for_header contains 'debutify' and settings.dbtfy_product_bullet_points and section.blocks.size > 0 -%}
  <div class="dbtfy dbtfy-product_bullet_points hide"
       data-position="{{ section.settings.dbtfy_bullet_points_position }}"
       data-alignment="{{ section.settings.dbtfy_bullet_points_alignment }}"
       data-display-type="{{ section.settings.dbtfy_bullet_points_display_type }}">

    <ul>
      {%- for block in section.blocks -%}

        {%- for i in (1..10)-%}
          {%- capture index -%}{{ forloop.index }}{%- endcapture -%}
          {%- capture bullet_point_text_selector -%}dbtfy_bullet_point_text_{{index}}{%- endcapture -%}
          {%- capture bullet_point_icon_selector -%}dbtfy_bullet_point_icon_{{index}}{%- endcapture -%}
          {%- capture product_type_selector -%}dbtfy_bullet_point_type_{{index}}{%- endcapture -%}
          {%- capture product_tag_selector -%}dbtfy_bullet_point_tag_{{index}}{%- endcapture -%}
          {%- capture product_selector -%}dbtfy_bullet_point_product_{{index}}{%- endcapture -%}
          {%- capture collection_selector -%}dbtfy_bullet_point_collection_{{index}}{%- endcapture -%}
          {%- capture visibility_selector -%}visibility_{{index}}{%- endcapture -%}

          {%- assign point_text = block.settings[bullet_point_text_selector] | remove: "<p>" | remove: "</p>" -%}
          {%- assign point_icon = block.settings[bullet_point_icon_selector] -%}
          {%- assign visibility = block.settings[visibility_selector] -%}

          {%- assign visibility_types = block.settings[product_type_selector] -%}
          {%- assign visibility_tags = block.settings[product_tag_selector] -%}
          {%- assign visibility_product = block.settings[product_selector] -%}
          {%- assign visibility_collection = block.settings[collection_selector] -%}

          {%- if point_text != blank -%}
            <li class="pbp-point"
                data-visibility-type="{{ visibility }}"
                data-visibility-product="{{ visibility_product.id }}"
                data-visibility-collection="{{ visibility_collection }}"
                data-visibility-product-types="{{ visibility_types }}"
                data-visibility-product-tags="{{ visibility_tags }}">

              {%- if point_icon != blank -%}
                <span class="{{ settings.icon }} icon-width text-secondary">{{ point_icon }}</span>
              {%- endif -%}

              <span> {{ point_text }}</span>
            </li>
          {%- endif -%}
        {%- endfor -%}
      {%- endfor -%}
    </ul>
  </div>
{%- endif -%}

