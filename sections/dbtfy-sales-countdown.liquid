{%- if content_for_header contains 'debutify' and settings.dbtfy_sales_countdown -%}
  {%- if section.blocks.size >= 1 -%}
    <div class="dbtfy-sales-countdown-templates" hidden
         data-text-days="{{ section.settings.dbtfy_sales_countdown_d }}"
         data-text-hours="{{ section.settings.dbtfy_sales_countdown_h }}"
         data-text-minutes="{{ section.settings.dbtfy_sales_countdown_m }}"
         data-text-seconds="{{ section.settings.dbtfy_sales_countdown_s }}">

      {%- for block in section.blocks -%}
        {%- for i in (1..10) -%}
          {%- capture index -%}{{ forloop.index }}{%- endcapture -%}
          {%- capture when_timer_id_over_action -%}when_timer_id_over_action_{{index}}{%- endcapture -%}
          {%- capture dbtfy_sales_countdown_date -%}dbtfy_sales_countdown_date_{{index}}{%- endcapture -%}
          {%- capture dbtfy_sales_countdown_time_hours -%}dbtfy_sales_countdown_time_hours_{{index}}{%- endcapture -%}
          {%- capture dbtfy_sales_countdown_time_mins -%}dbtfy_sales_countdown_time_mins_{{index}}{%- endcapture -%}
          {%- capture visibility -%}visibility_{{index}}{%- endcapture -%}
          {%- capture dbtfy_sales_countdown_product_grid -%}dbtfy_sales_countdown_product_grid_{{index}}{%- endcapture -%}
          {%- capture dbtfy_sales_countdown_tag -%}dbtfy_sales_countdown_tag_{{index}}{%- endcapture -%}
          {%- capture dbtfy_sales_countdown_type -%}dbtfy_sales_countdown_type_{{index}}{%- endcapture -%}
          {%- capture dbtfy_sales_countdown_product -%}dbtfy_sales_countdown_product_{{index}}{%- endcapture -%}
          {%- capture dbtfy_sales_countdown_collection -%}dbtfy_sales_countdown_collection_{{index}}{%- endcapture -%}
          {%- capture timer_message -%}timer_message_{{index}}{%- endcapture -%}

          {%- assign current_timer_over_action = block.settings[when_timer_id_over_action] -%}
          {%- assign current_sales_countdown_date = block.settings[dbtfy_sales_countdown_date] -%}
          {%- assign current_sales_countdown_time_hours = block.settings[dbtfy_sales_countdown_time_hours] -%}
          {%- assign current_sales_countdown_time_mins = block.settings[dbtfy_sales_countdown_time_mins] -%}
          {%- assign current_visibility = block.settings[visibility] -%}
          {%- assign current_sales_countdown_product_grid = block.settings[dbtfy_sales_countdown_product_grid] -%}
          {%- assign current_sales_countdown_tag = block.settings[dbtfy_sales_countdown_tag] -%}
          {%- assign current_sales_countdown_type = block.settings[dbtfy_sales_countdown_type] -%}
          {%- assign current_sales_countdown_product = block.settings[dbtfy_sales_countdown_product] -%}
          {%- assign current_sales_countdown_collection = block.settings[dbtfy_sales_countdown_collection] -%}
          {%- assign current_timer_message = block.settings[timer_message] -%}

          {%- if current_sales_countdown_time_hours == 0 and current_sales_countdown_time_mins == 0 and current_sales_countdown_date == blank -%}
            {%- continue -%}
          {%- endif -%}

          <div class="dbtfy dbtfy-sales_countdown dbtfy-countdown-{{ block.id }}-{{ index }}"
              data-countdown-id="dbtfy-countdown-{{ block.id }}-{{ index }}"
              data-action="{{ current_timer_over_action }}"
              data-date="{{ current_sales_countdown_date }}"
              data-hours="{{ current_sales_countdown_time_hours }}"
              data-minutes="{{ current_sales_countdown_time_mins }}"
              data-visibility="{{ current_visibility }}"
              data-show-in-product-grid="{{ current_sales_countdown_product_grid }}"
              data-tag="{{ current_sales_countdown_tag }}"
              data-type="{{ current_sales_countdown_type }}"
              data-product="{{ all_products[current_sales_countdown_product].id }}"
              data-collection="{{ collections[current_sales_countdown_collection].handle }}">

            <div id="SalesCountdown-{{ block.id }}-{{ index }}" class="SalesCountdown">
              {%- unless section.settings.dbtfy_sales_countdown_icons == blank -%}
              <span class="{{ settings.icon }} icon-width">{{ section.settings.dbtfy_sales_countdown_icons }}</span>
              {%- endunless -%}

              {%- unless section.settings.dbtfy_sales_countdown_prefix == blank -%}
              <span class="prefix-sales_countdown spacer-left-xs">{{ section.settings.dbtfy_sales_countdown_prefix }}</span>
              {%- endunless -%}

              <strong class="timer-sales_countdown text-secondary">
                <span class="days-sales_countdown"></span>
                <span class="hours-sales_countdown"></span>
                <span class="minutes-sales_countdown"></span>
                <span class="seconds-sales_countdown"></span>
              </strong>

              {%- unless section.settings.dbtfy_sales_countdown_suffix == blank -%}
              <span class="suffix-sales_countdown">{{ section.settings.dbtfy_sales_countdown_suffix }}</span>
              {%- endunless -%}
            </div>
            {%- if current_timer_message != blank and current_timer_over_action == "message" -%}
            <div class="dbtfy-sales_countdown_message" hidden>
              {%- unless section.settings.dbtfy_sales_countdown_icons == blank -%}
              <span class="{{ settings.icon }} icon-width">{{ section.settings.dbtfy_sales_countdown_icons }}</span>
              {%- endunless -%}

              <span>{{ current_timer_message }}</span>
            </div>
            {%- endif -%}
          </div>
        {%- endfor -%}
      {%- endfor -%}
    </div>
  {%- endif -%}
{%- endif -%}

