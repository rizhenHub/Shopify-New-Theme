<div class="box">
  <div class="wrapper">
    <div class="grid">
      <div class="grid__item large--eight-twelfths push--large--two-twelfths">
        <div class="section-header">
          <div class="page-title-wrapper">
            <h1 class="page-title">{{ page.title }}</h1>
          </div>
        </div>

        {%- if page.content != blank -%}
          <div class="page-content rte">
            {{ page.content }}
          {%- for product in collections.feautured.products -%}
           <p>{{- product.title -}}</p>
         {%- endfor -%}
          </div>
        {%- else -%}
          <div class="page-content rte">
            The page content is in progress. Please check again shortly. Thank you!
            {%- for product in collections.feautured.products -%}
             <p>{{- product.title -}}</p>
           {%- endfor -%}
          </div>
        {%- endif -%}
       
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.page.name",
  "settings": []
}
{% endschema %}
