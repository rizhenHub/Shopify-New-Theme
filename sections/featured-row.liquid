<div id="section-{{ section.id }}" class="{% unless section.settings.show_on_desktop %} medium--hide large--hide{% endunless %} {% unless section.settings.show_on_mobile %} small--hide{% endunless %} {{ section.settings.section_style }}" data-section-id="{{ section.id }}" data-section-type="featured-row-section">
  <div class="box">
    <div class="wrapper">

      <div class="grid grid-spacer align-center">
        <div class="grid__item large--six-twelfths medium--six-twelfths featured-row-{{ section.settings.image_alignement }}">
          {%- if section.settings.image != blank -%}
            <div class="media-wrapper" style="padding-top:{{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100}}%;">
              {%- if section.settings.image_link != blank -%}
                <a href="{{ section.settings.image_link }}">
              {%- endif -%} 

                <img class="media lazyload"
                {%- render 'lazysizes', img: section.settings.image, img_type: 'responsive' -%}
                alt="{{ section.settings.image.alt }}">

              {%- if section.settings.image_link != blank -%} 
                </a>
              {%- endif -%}   
            </div>
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>

        <div class="grid__item large--six-twelfths medium--six-twelfths {{ section.settings.text_alignment }}">
          {%- unless section.settings.title == blank -%}
            <h2 class="section-header__title">{{ section.settings.title | escape }}</h2>
          {%- endunless -%}
          {%- unless section.settings.text == blank -%}
            <div class="rte{% if section.settings.text_size == 'large' %} text-lead{% endif %}">{{ section.settings.text }}</div>
          {%- endunless -%}
          {%- unless section.settings.button_label == blank -%}
            <a href="{{ section.settings.button_link }}" class="btn {{ section.settings.button_style }}">
              {{ section.settings.button_label | escape }}
            </a>
          {%- endunless -%}
        </div>
      </div>

    </div>
  </div>
</div>

{% schema %}
  {
    "name": "t:sections.featured_row.name",
	  "class": "featured-row-section",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_on_desktop",
        "label": "t:sections.featured_row.settings.show_on_desktop.label",
        "default": true
      },
       {
        "type": "checkbox",
        "id": "show_on_mobile",
        "label": "t:sections.featured_row.settings.show_on_mobile.label",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "t:sections.featured_row.settings.image.label"
      },
      {
        "type": "url",
        "id": "image_link",
        "label": "Image link"
      },
      {
        "type": "select",
        "id": "section_style",
        "label": "t:sections.featured_row.settings.section_style.label",
        "default": "section-blank",
        "options": [
          {
            "value": "section-blank",
            "label": "t:sections.featured_row.settings.section_style.options__1.label"
          },
		      {
            "value": "section-default",
            "label": "t:sections.featured_row.settings.section_style.options__2.label"
          },
          {
            "value": "section-border",
            "label": "t:sections.featured_row.settings.section_style.options__3.label"
          }
        ]
      },
	    {
        "type": "select",
        "id": "text_size",
        "label": "t:sections.featured_row.settings.text_size.label",
        "default": "large",
        "options": [
          {
            "value": "medium",
            "label": "t:sections.featured_row.settings.text_size.options__1.label"
          },
          {
            "value": "large",
            "label": "t:sections.featured_row.settings.text_size.options__2.label"
          }
        ]
      },
      {
        "type": "select",
        "id": "image_alignement",
        "label": "t:sections.featured_row.settings.image_alignement.label",
        "default": "left",
        "options": [
          {
            "value": "left",
            "label": "t:sections.featured_row.settings.image_alignement.options__1.label"
          },
          {
            "value": "right",
            "label": "t:sections.featured_row.settings.image_alignement.options__2.label"
          }
        ]
      },
	    {
        "type": "select",
        "id": "text_alignment",
        "label": "t:sections.featured_row.settings.text_alignment.label",
        "default": "text-center",
        "options": [
          {
            "value": "",
            "label": "t:sections.featured_row.settings.text_alignment.options__1.label"
          },
 		      {
            "value": "text-center",
            "label": "t:sections.featured_row.settings.text_alignment.options__2.label"
          },
          {
            "value": "text-right",
            "label": "t:sections.featured_row.settings.text_alignment.options__3.label"
          }
        ]
      },
      {
        "type": "text",
        "id": "title",
        "label": "t:sections.featured_row.settings.title.label",
        "default": "Image with text"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "t:sections.featured_row.settings.text.label",
        "default": "<p>Pair large text with an image to give focus to your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
      },
	    {
        "type": "select",
        "id": "button_style",
        "label": "t:sections.featured_row.settings.button_style.label",
        "default": "btn--primary",
        "options": [
          {
            "value": "",
            "label": "t:sections.featured_row.settings.button_style.options__1.label"
          },
          {
            "value": "btn--primary",
            "label": "t:sections.featured_row.settings.button_style.options__2.label"
          },
          {
            "value": "btn-outline-primary",
            "label": "t:sections.featured_row.settings.button_style.options__3.label"
          }
        ]
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "t:sections.featured_row.settings.button_label.label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "t:sections.featured_row.settings.button_link.label"
      }
    ],
    "presets": [
      {
        "name": "t:sections.featured_row.presets.name",
        "category": "t:sections.featured_row.presets.category"
      }
    ]
  }
{% endschema %}
